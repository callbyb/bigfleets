    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const performanceChartCtx = document.getElementById('performanceChart').getContext('2d');
            let currentChart;

            const financialData = {
                labels: ['2019', '2020', '2021', '2022', '2023', '2024 (UDM)'],
                receita: [872, 510, 1142, 1244, 2963, 3700],
                lucro: [null, 36, null, 141, 160, null],
                ativos: [null, 1795, null, 8175, 12199, null],
                divida: [1078, null, 1600, 5649, 6130, 9100],
                frota: [null, null, 27, 71, 85, 90],
                capex: [null, null, 131, 3083, 1400, 2800 * 2],
                alavancagem: [3.7, null, 2.7, 5.0, 6.1, 5.7],
                caixa: [268, null, 619, 978, 1611, 1200],
                dividaCP: [null, null, 759, 1099, 1878, 2700]
            };
            
            const chartOptions = {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                if (context.parsed.y !== null) {
                                    if (context.dataset.isCurrency) {
                                       label += new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL', minimumFractionDigits: 0 }).format(context.parsed.y) + ' M';
                                    } else if (context.dataset.isUnit) {
                                       label += new Intl.NumberFormat('pt-BR').format(context.parsed.y) + ' mil';
                                    } else {
                                       label += context.parsed.y;
                                    }
                                }
                                return label;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Valores (R$ Milh√µes)'
                        }
                    },
                    y1: {
                        position: 'right',
                        grid: {
                            drawOnChartArea: false
                        },
                        title: {
                            display: true,
                            text: 'Unidades (Mil)'
                        }
                    }
                }
            };

            function updatePerformanceChart(type) {
                if (currentChart) {
                    currentChart.destroy();
                }

                document.querySelectorAll('#performance .tab-button').forEach(b => b.classList.remove('active'));
                
                let config = {};
                let textContent = '';

                switch (type) {
                    case 'receita':
                        document.getElementById('btn-receita').classList.add('active');
                        config = {
                            type: 'bar',
                            data: {
                                labels: financialData.labels,
                                datasets: [{
                                    label: 'Receita L√≠quida',
                                    data: financialData.receita,
                                    backgroundColor: 'rgba(0, 51, 160, 0.6)',
                                    borderColor: 'rgba(0, 51, 160, 1)',
                                    borderWidth: 1,
                                    yAxisID: 'y',
                                    isCurrency: true
                                }, {
                                    label: 'Lucro L√≠quido',
                                    data: financialData.lucro,
                                    type: 'line',
                                    borderColor: '#5CB85C',
                                    backgroundColor: '#5CB85C',
                                    tension: 0.3,
                                    yAxisID: 'y',
                                    isCurrency: true
                                }]
                            },
                            options: { ...chartOptions, scales: { y: { title: { display: true, text: 'Valores (R$ Milh√µes)' } } } }
                        };
                        textContent = `A receita l√≠quida da LM demonstra um crescimento exponencial, especialmente a partir de 2022, impulsionada pela expans√£o da frota e aquisi√ß√µes. O lucro l√≠quido acompanha a tend√™ncia de crescimento, embora em menor propor√ß√£o, refletindo os altos custos de deprecia√ß√£o e despesas financeiras associadas √† expans√£o.`;
                        break;
                    case 'divida':
                        document.getElementById('btn-divida').classList.add('active');
                        config = {
                            type: 'bar',
                            data: {
                                labels: financialData.labels.filter((_, i) => financialData.ativos[i] !== null),
                                datasets: [{
                                    label: 'Ativos Totais',
                                    data: financialData.ativos.filter(v => v !== null),
                                    backgroundColor: 'rgba(92, 184, 92, 0.6)',
                                    borderColor: 'rgba(92, 184, 92, 1)',
                                    borderWidth: 1,
                                    isCurrency: true
                                }, {
                                    label: 'D√≠vida Total',
                                    data: financialData.divida.filter((_,i) => financialData.ativos[i] !== null),
                                    backgroundColor: 'rgba(217, 83, 79, 0.6)',
                                    borderColor: 'rgba(217, 83, 79, 1)',
                                    borderWidth: 1,
                                    isCurrency: true
                                }]
                            },
                            options: { ...chartOptions, scales: { y: { title: { display: true, text: 'Valores (R$ Milh√µes)' } } } }
                        };
                        textContent = `O balan√ßo patrimonial reflete a estrat√©gia intensiva em capital. O crescimento dos ativos, majoritariamente a frota de ve√≠culos, foi financiado por um aumento substancial da d√≠vida. Essa estrutura de capital alavancada √© comum no setor, mas exige uma gest√£o financeira cuidadosa.`;
                        break;
                    case 'frota':
                        document.getElementById('btn-frota').classList.add('active');
                        config = {
                            type: 'bar',
                            data: {
                                labels: financialData.labels,
                                datasets: [{
                                    label: 'Frota (mil ve√≠culos)',
                                    data: financialData.frota,
                                    backgroundColor: 'rgba(240, 173, 78, 0.6)',
                                    borderColor: 'rgba(240, 173, 78, 1)',
                                    borderWidth: 1,
                                    yAxisID: 'y1',
                                    isUnit: true
                                }, {
                                    label: 'CAPEX (R$ Milh√µes)',
                                    data: financialData.capex,
                                    type: 'line',
                                    borderColor: '#0033A0',
                                    backgroundColor: '#0033A0',
                                    tension: 0.3,
                                    yAxisID: 'y',
                                    isCurrency: true
                                }]
                            },
                            options: chartOptions
                        };
                        textContent = `O crescimento da frota √© o motor da expans√£o da LM. O gr√°fico ilustra a forte correla√ß√£o entre os investimentos (CAPEX) e o aumento do n√∫mero de ve√≠culos. Os picos de CAPEX, especialmente em 2022 e 2024, resultaram em saltos significativos no tamanho da frota.`;
                        break;
                }
                
                currentChart = new Chart(performanceChartCtx, config);
                document.getElementById('performance-text').innerHTML = `<p>${textContent}</p>`;
            }

            document.getElementById('btn-receita').addEventListener('click', () => updatePerformanceChart('receita'));
            document.getElementById('btn-divida').addEventListener('click', () => updatePerformanceChart('divida'));
            document.getElementById('btn-frota').addEventListener('click', () => updatePerformanceChart('frota'));
            
            document.getElementById('btn-receita').click();

            const riskTabs = document.querySelectorAll('.risk-tab-button');
            const riskContent = document.getElementById('risk-content');

            const riskData = {
                credito: {
                    title: 'Risco de Cr√©dito: Alavancagem Elevada, Suporte S√≥lido',
                    text: 'A alavancagem da empresa √© alta, atingindo um pico em 2023 antes de mostrar sinais de melhora em 2024. Embora o indicador D√≠vida Bruta/EBITDA esteja acima do ideal, o risco √© mitigado pelo suporte do Grupo Volkswagen, refletido em ratings de cr√©dito est√°veis (AA(bra)). O mercado confia na capacidade da empresa de honrar seus compromissos devido √† for√ßa de seu controlador.',
                    chart: {
                        type: 'bar',
                        data: {
                            labels: financialData.labels.filter((_, i) => financialData.alavancagem[i] !== null),
                            datasets: [{
                                label: 'Alavancagem Bruta (D√≠vida/EBITDA)',
                                data: financialData.alavancagem.filter(v => v !== null),
                                backgroundColor: 'rgba(217, 83, 79, 0.6)',
                                borderColor: 'rgba(217, 83, 79, 1)',
                                borderWidth: 1
                            }]
                        },
                        options: { ...chartOptions, scales: { y: { title: { display: true, text: '√çndice (x)' } }, y1: { display: false } } }
                    }
                },
                liquidez: {
                    title: 'Risco de Liquidez: Press√£o de Curto Prazo',
                    text: 'O fluxo de caixa livre consistentemente negativo, devido aos altos investimentos, exige que a empresa recorra ao mercado para rolar suas d√≠vidas. A rela√ß√£o entre o caixa dispon√≠vel e a d√≠vida de curto prazo caiu para 0,4x em junho de 2024, indicando uma necessidade de gerenciamento de liquidez muito ativo. O bom acesso ao mercado de capitais √©, novamente, um fator crucial para mitigar este risco.',
                     chart: {
                        type: 'line',
                        data: {
                            labels: financialData.labels.filter((_, i) => financialData.caixa[i] !== null && financialData.dividaCP[i] !== null),
                            datasets: [{
                                label: 'Caixa e Equivalentes',
                                data: financialData.caixa.filter((_, i) => financialData.caixa[i] !== null && financialData.dividaCP[i] !== null),
                                borderColor: '#5CB85C',
                                backgroundColor: 'rgba(92, 184, 92, 0.1)',
                                fill: true,
                                tension: 0.3,
                                isCurrency: true
                            }, {
                                label: 'D√≠vida de Curto Prazo',
                                data: financialData.dividaCP.filter((_, i) => financialData.caixa[i] !== null && financialData.dividaCP[i] !== null),
                                borderColor: '#D9534F',
                                backgroundColor: 'rgba(217, 83, 79, 0.1)',
                                fill: true,
                                tension: 0.3,
                                isCurrency: true
                            }]
                        },
                        options: { ...chartOptions, scales: { y: { stacked: false, title: { display: true, text: 'Valores (R$ Milh√µes)' } }, y1: { display: false } } }
                    }
                },
                mercado: {
                    title: 'Risco de Mercado: Sensibilidade a Juros e Pre√ßos',
                    text: 'A LM opera em um setor resiliente e com grande potencial de crescimento no Brasil. No entanto, sua rentabilidade √© sens√≠vel a fatores macroecon√¥micos, como a volatilidade dos pre√ßos dos ve√≠culos e, principalmente, as taxas de juros, que impactam diretamente o custo de sua d√≠vida e a rentabilidade das opera√ß√µes. A empresa demonstrou capacidade de se adaptar, recuperando margens em 2024 ap√≥s a normaliza√ß√£o dos pre√ßos dos ve√≠culos.',
                    chart: null
                }
            };
            
            let riskChart;
            function updateRiskContent(tab) {
                riskTabs.forEach(t => t.classList.remove('active', 'text-[#0033A0]', 'border-[#0033A0]'));
                document.querySelector(`.risk-tab-button[data-tab="${tab}"]`).classList.add('active', 'text-[#0033A0]', 'border-[#0033A0]');
                
                const content = riskData[tab];
                let html = `
                    <div class="p-4 md:p-6 bg-gray-50 rounded-lg">
                        <h3 class="text-lg md:text-xl font-semibold mb-3 text-gray-800">${content.title}</h3>
                        <p class="text-gray-600 mb-6">${content.text}</p>
                        ${content.chart ? '<div class="chart-container h-[300px] md:h-[400px]"><canvas id="riskChartCanvas"></canvas></div>' : '<div class="text-center p-8 bg-gray-100 rounded-md"><p class="font-medium text-gray-500">An√°lise qualitativa. N√£o h√° gr√°fico para esta categoria.</p></div>'}
                    </div>
                `;
                riskContent.innerHTML = html;

                if (content.chart) {
                    if(riskChart) riskChart.destroy();
                    const riskChartCtx = document.getElementById('riskChartCanvas').getContext('2d');
                    riskChart = new Chart(riskChartCtx, content.chart);
                }
            }

            riskTabs.forEach(tab => {
                tab.addEventListener('click', () => updateRiskContent(tab.dataset.tab));
            });
            
            updateRiskContent('credito');

            const navLinks = document.querySelectorAll('.nav-link');
            const sections = document.querySelectorAll('main section');

            window.addEventListener('scroll', () => {
                let current = '';
                sections.forEach(section => {
                    const sectionTop = section.offsetTop;
                    if (pageYOffset >= sectionTop - 100) {
                        current = section.getAttribute('id');
                    }
                });

                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('href').includes(current)) {
                        link.classList.add('active');
                    }
                });
            });
        });
    </script>
</body>
</html>

