    <script>
        const FONT_COLOR = '#3A3D42';
        const GRID_COLOR = '#E5E7EB';
        const PALETTE = {
            blue: '#4A90E2',
            green: '#50E3C2',
            yellow: '#F5A623',
            red: '#D0021B',
            darkGray: '#3A3D42',
            lightGray: '#F8F7F4'
        };

        const wrapLabel = (label, maxLen = 16) => {
            if (typeof label !== 'string' || label.length <= maxLen) {
                return label;
            }
            const words = label.split(' ');
            let currentLine = '';
            const lines = [];
            for (const word of words) {
                if ((currentLine + ' ' + word).trim().length > maxLen && currentLine.length > 0) {
                    lines.push(currentLine.trim());
                    currentLine = word;
                } else {
                    currentLine = (currentLine + ' ' + word).trim();
                }
            }
            if (currentLine) {
                lines.push(currentLine.trim());
            }
            return lines;
        };

        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            return Array.isArray(label) ? label.join(' ') : label;
        };

        const chartDefaultOptions = (extraOptions = {}) => ({
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    labels: {
                        color: FONT_COLOR,
                        font: { family: "'Inter', sans-serif" }
                    }
                },
                tooltip: {
                    callbacks: { title: tooltipTitleCallback },
                    backgroundColor: '#FFFFFF',
                    titleColor: FONT_COLOR,
                    bodyColor: FONT_COLOR,
                    borderColor: GRID_COLOR,
                    borderWidth: 1
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: { color: FONT_COLOR },
                    grid: { color: GRID_COLOR }
                },
                x: {
                    ticks: { color: FONT_COLOR },
                    grid: { display: false }
                }
            },
            ...extraOptions
        });

        new Chart(document.getElementById('growthChart'), {
            type: 'bar',
            data: {
                labels: ['2020', '2021', '2022', '2023', '2024'],
                datasets: [{
                    label: 'Receita Total (R$ bi)',
                    data: [10.31, 10.90, 17.78, 28.90, 37.27],
                    backgroundColor: PALETTE.blue,
                    yAxisID: 'y'
                }, {
                    label: 'Lucro Líquido (R$ bi)',
                    data: [1.05, 2.04, 1.84, 1.81, 1.81],
                    backgroundColor: PALETTE.green,
                    type: 'line',
                    borderColor: PALETTE.green,
                    yAxisID: 'y', /* Changed to single Y-axis */
                    tension: 0.3
                }]
            },
            options: chartDefaultOptions({
                scales: {
                    y: { 
                        position: 'left', 
                        title: { display: true, text: 'Valor (R$ bi)' }, /* Simplified title for single axis */
                        beginAtZero: true,
                        max: 40 
                    },
                    x: {
                        ticks: { color: FONT_COLOR },
                        grid: { display: false }
                    }
                }
            })
        });

        new Chart(document.getElementById('revenueSplitChart'), {
            type: 'doughnut',
            data: {
                labels: ['Aluguel', 'Seminovos'],
                datasets: [{
                    data: [4.8, 5.3],
                    backgroundColor: [PALETTE.blue, PALETTE.green],
                    borderColor: PALETTE.lightGray,
                    borderWidth: 4
                }]
            },
            options: chartDefaultOptions({ scales: { x: { display: false }, y: { display: false } } })
        });
        
        new Chart(document.getElementById('ebitdaMarginChart'), {
            type: 'bar',
            data: {
                labels: [wrapLabel('Aluguel de Carros'), wrapLabel('Gestão de Frotas'), 'Seminovos'],
                datasets: [{
                    label: 'Margem EBITDA (%)',
                    data: [65.2, 70.0, 2.0],
                    backgroundColor: [PALETTE.blue, PALETTE.green, PALETTE.yellow]
                }]
            },
            options: chartDefaultOptions({
                indexAxis: 'y',
                plugins: { legend: { display: false } },
                scales: { 
                    x: { 
                        ticks: { callback: value => value + '%' },
                        beginAtZero: true,
                        max: 80 
                    } 
                }
            })
        });

        new Chart(document.getElementById('balanceSheetChart'), {
            type: 'line',
            data: {
                labels: ['2020', '2021', '2022', '2023', '2024'],
                datasets: [{
                    label: 'Patrimônio Líquido',
                    data: [6.05, 7.62, 20.57, 25.40, 26.34],
                    fill: true,
                    backgroundColor: 'rgba(74, 144, 226, 0.3)',
                    borderColor: PALETTE.blue,
                    tension: 0.1
                }, {
                    label: 'Passivo Total (Dívida)',
                    data: [14.39, 17.69, 45.08, 55.55, 60.90],
                    fill: true,
                    backgroundColor: 'rgba(245, 166, 35, 0.3)',
                    borderColor: PALETTE.yellow,
                    tension: 0.1
                }]
            },
            options: chartDefaultOptions({
                scales: { 
                    y: { 
                        stacked: true, 
                        title: { display: true, text: 'Valor (R$ bi)' },
                        beginAtZero: true,
                        max: 90 
                    } 
                }
            })
        });

        new Chart(document.getElementById('cashFlowChart'), {
            type: 'bar',
            data: {
                labels: ['2020', '2021', '2022', '2023', '2024'],
                datasets: [{
                    label: 'Caixa das Operações (R$ bi)',
                    data: [0.48, -3.37, -9.10, -9.92, 0.65],
                    backgroundColor: (ctx) => ctx.raw >= 0 ? PALETTE.green : PALETTE.red,
                }, {
                    label: 'Caixa de Financiamento (R$ bi)',
                    data: [-0.001, 1.38, 5.72, 10.23, 1.37],
                    backgroundColor: PALETTE.blue,
                }]
            },
            options: chartDefaultOptions({
                plugins: { legend: { labels: { color: '#FFFFFF' } } },
                scales: {
                    y: { 
                        ticks: { color: '#FFFFFF' }, 
                        grid: { color: 'rgba(255,255,255,0.2)' }, 
                        title: { display: true, text: 'Valor (R$ bi)', color: '#FFFFFF' },
                        min: -12, 
                        max: 12 
                    },
                    x: { ticks: { color: '#FFFFFF' }, grid: { display: false } }
                }
            })
        });

        new Chart(document.getElementById('debtEbitdaChart'), {
            type: 'line',
            data: {
                labels: ['Dez-19', 'Dez-22', 'Set-23', 'Proj. 25'],
                datasets: [{
                    label: 'Dívida / EBITDA',
                    data: [4.1, 4.6, 3.5, 3.0],
                    borderColor: PALETTE.blue,
                    tension: 0.1,
                    pointBackgroundColor: PALETTE.blue,
                    pointRadius: 5
                }]
            },
            options: chartDefaultOptions({
                 plugins: { legend: { display: false } },
                 scales: { 
                    y: { 
                        min: 2.0, 
                        max: 5.0 
                    } 
                 }
            })
        });

        const navLinks = document.querySelectorAll('.nav-link');
        const sections = document.querySelectorAll('main section');
        window.addEventListener('scroll', () => {
            let current = '';
            sections.forEach(section => {
                const sectionTop = section.offsetTop;
                if (pageYOffset >= sectionTop - 80) {
                    current = section.getAttribute('id');
                }
            });
            navLinks.forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href').includes(current)) {
                    link.classList.add('active');
                }
            });
        });
    </script>
</body>
