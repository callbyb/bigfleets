    <script>
        document.addEventListener('DOMContentLoaded', function () {
            
            const financialData = {
                years: [2020, 2021, 2022, 2023, 2024],
                revenue: [4.09, 5.33, 9.60, 13.48, 13.48],
                netMargin: [2.67, 15.37, 5.80, 1.72, 2.01],
                grossMargin: [21.19, 44.75, 37.56, 29.79, 30.93],
                ebitdaMargin: [17.56, 39.06, 36.99, 34.87, 36.50],
                assets: {
                    current: [2.38, 9.15, 9.44, 5.43, 6.95],
                    nonCurrent: [6.12, 12.57, 16.81, 19.69, 23.62]
                },
                liabilities: {
                    current: [2.45, 3.75, 5.90, 7.46, 9.25],
                    nonCurrent: [3.70, 14.68, 17.58, 15.14, 18.83],
                    equity: [2.36, 3.28, 2.77, 2.52, 2.49]
                },
                ratios: {
                    debtToEbitda: [null, null, null, 3.08, 3.08], 
                    currentRatio: [0.97, 2.44, 1.60, 0.73, 0.77] 
                }
            };

            function createRevenueVsMarginChart() {
                const ctx = document.getElementById('revenueVsMarginChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: financialData.years,
                        datasets: [{
                            label: 'Receita Líquida (R$ bi)',
                            data: financialData.revenue,
                            backgroundColor: 'rgba(59, 130, 246, 0.6)',
                            borderColor: 'rgba(59, 130, 246, 1)',
                            borderWidth: 1,
                            yAxisID: 'y'
                        }, {
                            label: 'Margem Líquida (%)',
                            data: financialData.netMargin,
                            type: 'line',
                            borderColor: 'rgba(239, 68, 68, 1)',
                            backgroundColor: 'rgba(239, 68, 68, 0.2)',
                            tension: 0.3,
                            fill: false,
                            yAxisID: 'y1'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                type: 'linear',
                                display: true,
                                position: 'left',
                                title: {
                                    display: true,
                                    text: 'Receita (R$ Bilhões)'
                                }
                            },
                            y1: {
                                type: 'linear',
                                display: true,
                                position: 'right',
                                title: {
                                    display: true,
                                    text: 'Margem (%)'
                                },
                                grid: {
                                    drawOnChartArea: false
                                }
                            }
                        }
                    }
                });
            }

            function createMarginsChart() {
                const ctx = document.getElementById('marginsChart').getContext('2d');
                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: financialData.years,
                        datasets: [{
                            label: 'Margem Bruta (%)',
                            data: financialData.grossMargin,
                            borderColor: 'rgba(59, 130, 246, 1)',
                            backgroundColor: 'rgba(59, 130, 246, 0.1)',
                            tension: 0.3,
                            fill: true,
                        }, {
                            label: 'Margem EBITDA (%)',
                            data: financialData.ebitdaMargin,
                            borderColor: 'rgba(251, 146, 60, 1)',
                            backgroundColor: 'rgba(251, 146, 60, 0.1)',
                            tension: 0.3,
                            fill: true,
                        }, {
                            label: 'Margem Líquida (%)',
                            data: financialData.netMargin,
                            borderColor: 'rgba(239, 68, 68, 1)',
                            backgroundColor: 'rgba(239, 68, 68, 0.1)',
                            tension: 0.3,
                            fill: true,
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: false,
                                title: {
                                    display: true,
                                    text: 'Margem (%)'
                                }
                            }
                        },
                        plugins: {
                            tooltip: {
                                mode: 'index',
                                intersect: false
                            }
                        }
                    }
                });
            }

            function createBalanceSheetChart() {
                const ctx = document.getElementById('balanceSheetChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: financialData.years,
                        datasets: [
                        {
                            label: 'Ativos',
                            data: financialData.years.map((_, i) => financialData.assets.current[i] + financialData.assets.nonCurrent[i]),
                            backgroundColor: 'rgba(59, 130, 246, 0.6)',
                        },
                        {
                            label: 'Passivos (Dívida)',
                            data: financialData.years.map((_, i) => financialData.liabilities.current[i] + financialData.liabilities.nonCurrent[i]),
                            backgroundColor: 'rgba(239, 68, 68, 0.6)',
                        },
                        {
                            label: 'Patrimônio Líquido',
                            data: financialData.liabilities.equity,
                            backgroundColor: 'rgba(16, 185, 129, 0.6)',
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            x: { stacked: false },
                            y: { 
                                stacked: false,
                                title: {
                                    display: true,
                                    text: 'Valor (R$ Bilhões)'
                                }
                            }
                        },
                        plugins: {
                            tooltip: {
                                mode: 'index',
                                intersect: false
                            }
                        }
                    }
                });
            }

            function createRiskRatiosChart() {
                const ctx = document.getElementById('riskRatiosChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: financialData.years,
                        datasets: [{
                            label: 'Dívida Líquida / EBITDA',
                            data: financialData.ratios.debtToEbitda,
                            backgroundColor: 'rgba(245, 158, 11, 0.7)',
                            yAxisID: 'y1',
                            order: 2
                        }, {
                            label: 'Liquidez Corrente',
                            data: financialData.ratios.currentRatio,
                            backgroundColor: 'rgba(59, 130, 246, 0.7)',
                            yAxisID: 'y',
                            order: 1,
                            type: 'line',
                            tension: 0.2,
                            borderColor: 'rgba(59, 130, 246, 1)',
                            fill: false
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                type: 'linear',
                                position: 'left',
                                title: {
                                    display: true,
                                    text: 'Índice de Liquidez'
                                }
                            },
                            y1: {
                                type: 'linear',
                                position: 'right',
                                title: {
                                    display: true,
                                    text: 'Dívida / EBITDA (x)'
                                },
                                grid: {
                                    drawOnChartArea: false
                                }
                            }
                        }
                    }
                });
            }
            
            createRevenueVsMarginChart();
            createMarginsChart();
            createBalanceSheetChart();
            createRiskRatiosChart();

            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
            
            document.querySelectorAll('#mobile-menu a').forEach(link => {
                link.addEventListener('click', () => {
                    mobileMenu.classList.add('hidden');
                });
            });

            document.querySelectorAll('.risk-card').forEach(card => {
                card.addEventListener('click', () => {
                    card.classList.toggle('open');
                });
            });
        });
    </script>
</body>
</html>

