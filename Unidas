    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const chartData = {
                labels: ['2019', '2020', '2021', '2022', '2023'],
                revenue: [3.3, 6.1, 8.0, 10.9, 2.7],
                ebitda: [2.2, 4.4, 6.3, 8.1, 1.9],
                leverage: [3.6, 3.6, 3.2, 2.9, 5.8]
            };

            const ctxRevenue = document.getElementById('revenueEbitdaChart').getContext('2d');
            new Chart(ctxRevenue, {
                type: 'line',
                data: {
                    labels: chartData.labels,
                    datasets: [{
                        label: 'Receita Líquida',
                        data: chartData.revenue,
                        borderColor: '#3b82f6', // blue-500
                        backgroundColor: 'rgba(59, 130, 246, 0.1)',
                        borderWidth: 2,
                        tension: 0.1,
                        pointBackgroundColor: '#3b82f6',
                        fill: true,
                    }, {
                        label: 'EBITDA',
                        data: chartData.ebitda,
                        borderColor: '#10b981', // emerald-500
                        backgroundColor: 'rgba(16, 185, 129, 0.1)',
                        borderWidth: 2,
                        tension: 0.1,
                        pointBackgroundColor: '#10b981',
                        fill: true,
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'top' },
                        tooltip: {
                            mode: 'index',
                            intersect: false,
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.y !== null) {
                                        label += context.parsed.y + ' B';
                                    }
                                    return label;
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'R$ Bilhões'
                            }
                        }
                    },
                    segments: {
                        'line-0': {
                            from: 3,
                            to: 4,
                            options: {
                                borderDash: [6, 6],
                                borderColor: '#a1a1aa' // zinc-400
                            }
                        },
                         'line-1': {
                            from: 3,
                            to: 4,
                            options: {
                                borderDash: [6, 6],
                                borderColor: '#a1a1aa' // zinc-400
                            }
                        }
                    }
                }
            });

            const ctxLeverage = document.getElementById('leverageChart').getContext('2d');
            new Chart(ctxLeverage, {
                type: 'bar',
                data: {
                    labels: chartData.labels,
                    datasets: [{
                        label: 'Dívida Líq./EBITDA',
                        data: chartData.leverage,
                        backgroundColor: chartData.leverage.map(val => val > 5 ? '#f59e0b' : '#3b82f6'), // amber-500 for high risk
                        borderColor: chartData.leverage.map(val => val > 5 ? '#d97706' : '#2563eb'),
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Múltiplo (x)'
                            }
                        }
                    }
                }
            });

            const riskButtons = document.querySelectorAll('.nav-button');
            const riskContents = document.querySelectorAll('.risk-content');

            riskButtons.forEach(button => {
                button.addEventListener('click', () => {
                    riskButtons.forEach(btn => btn.classList.remove('active', 'border-slate-800'));
                    button.classList.add('active', 'border-slate-800');

                    const targetId = button.id.replace('btn-', 'content-');
                    riskContents.forEach(content => {
                        content.classList.remove('active');
                        if (content.id === targetId) {
                            content.classList.add('active');
                        }
                    });
                });
            });
            
            // Activate first button by default
            document.getElementById('btn-risco-credito').classList.add('border-slate-800');
        });
    </script>
</body>
